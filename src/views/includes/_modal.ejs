<button type="button" class="btn btn-primary messageModal disp-0" data-toggle="modal" data-target="#modalForm">Modal
    With Form</button>


<div class="modal fade" tabindex="-1" id="modalForm">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Send Message</h5>
                <a href="#" class="close" data-dismiss="modal" aria-label="Close">
                    <em class="icon ni ni-cross"></em>
                </a>
            </div>
            <div class="modal-body">
                <form action="#" class="form-validate is-alter" id="modalElem">
                    <div class="form-group">
                        <label class="form-label" for="subject">Subject</label>
                        <div class="form-control-wrap">
                            <input type="text" class="form-control" id="subject" name="subject" required>
                            <input type="hidden" class="form-control" id="_id" name="_id" value="">
                            <input type="hidden" class="form-control" id="value" name="value" value="">
                        </div>
                    </div>


                    <div class="form-group">
                        <label class="form-label" for="message">Message</label>
                        <div class="form-control-wrap">
                            <textarea type="text" class="form-control" id="message" name="message" required></textarea>

                        </div>
                    </div>


                    <div class="form-group">
                        <label class="form-label">Communication</label>
                        <ul class="custom-control-group g-3 align-center">
                            <li>
                                <div class="custom-control custom-control-sm custom-checkbox">
                                    <input type="checkbox" name="email" class="custom-control-input" id="com-email"
                                        value="email">
                                    <label class="custom-control-label" for="com-email">Email</label>
                                </div>
                            </li>
                            <li>
                                <div class="custom-control custom-control-sm custom-checkbox">
                                    <input type="checkbox" name="sms" class="custom-control-input" id="com-sms"
                                        value="sms">
                                    <label class="custom-control-label" for="com-sms">SMS</label>
                                </div>
                            </li>
                            <li>
                                <div class="custom-control custom-control-sm custom-checkbox">
                                    <input type="checkbox" name="notification" class="custom-control-input"
                                        id="com-phone" value="push notification">
                                    <label class="custom-control-label" for="com-phone">Push Notification</label>
                                </div>
                            </li>
                        </ul>
                    </div>

                    <div class="form-group">
                        <button type="button" class="btn btn-lg btn-primary submitBtn" onclick="processAlert()">Send
                            Message</button>

                        <button class="btn btn-primary btn-lg btn-block spinload disp-0" type="button" disabled>
                            <span class="spinner-grow spinner-grow-sm" role="status" aria-hidden="true"></span>
                            <span> Loading... </span>
                        </button>
                    </div>
                </form>
            </div>
            <div class="modal-footer bg-light">
                <span class="sub-text">Becued - 2022</span>
            </div>
        </div>
    </div>
</div>