<%- include('../../includes/_top.ejs') %>
<%- include('../../includes/_aside.ejs') %>
<%- include('../../includes/_header.ejs') %>
<!-- content @s -->
<div class="nk-content ">
    <div class="container-fluid">
        <div class="nk-content-inner">
            <div class="nk-content-body">
                <div class="nk-block-head nk-block-head-sm">
                    <div class="nk-block-between">
                        <div class="nk-block-head-content">
                            <h3 class="nk-block-title page-title">Crop List</h3>
                        </div><!-- .nk-block-head-content -->
                        <div class="nk-block-head-content">
                            <div class="toggle-wrap nk-block-tools-toggle">
                                <a href="javascript:void()" class="btn btn-icon btn-trigger toggle-expand mr-n1"
                                    data-target="pageMenu"><em class="icon ni ni-more-v"></em></a>
                                <div class="toggle-expand-content" data-content="pageMenu">
                                    <ul class="nk-block-tools g-3">
                                        <li>
                                            <div class="form-control-wrap">
                                                <div class="form-icon form-icon-right">
                                                    <em class="icon ni ni-search"></em>
                                                </div>
                                                <input type="text" class="form-control" id="default-04"
                                                    placeholder="Quick search by id">
                                            </div>
                                        </li>


                                    </ul>
                                </div>
                            </div>
                        </div><!-- .nk-block-head-content -->
                    </div><!-- .nk-block-between -->
                </div><!-- .nk-block-head -->
                <div class="row g-gs">
                    <% if(data.length > 0) { %>
                    <% data.forEach(record => { %>
                    <div class="col-sm-6 col-lg-4 col-xxl-4">
                        <div class="card card-bordered">
                                <img src="<%= record.image %>" class="card-img-top" alt="<%= record.name %>"
                                    style="width: 100%; height: 200px; object-fit: cover;">
                            <div class="card-inner">

                                <h5 class="card-title"><%= record.name %></h5>
                                <span><%= record.category %></span>
                                <hr>

                                <a href="javascript:void()" class="btn btn-primary" data-toggle="modal"
                                    data-target="#modalForm<%= record._id %>">Edit</a>
                                <a href="javascript:void(0)" class="btn btn-danger"
                                    onclick="deleteItem('crop', '<%= record._id %>')">Delete</a>
                            </div>



                        </div>


                    </div>

                    <!-- Add Modal -->

                    <div class="modal fade" tabindex="-1" id="modalForm<%= record._id %>">
                        <div class="modal-dialog" role="document">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title">Edit
                                        <span class="text-danger"><%= record.name %></span></h5>
                                    <a href="#" class="close" data-dismiss="modal" aria-label="Close">
                                        <em class="icon ni ni-cross"></em>
                                    </a>
                                </div>
                                <div class="modal-body">
                                    <form action="#" class="form-validate is-alter" id="formElem<%= record._id %>">
                                        <div class="form-group">
                                            <label class="form-label" for="cropName">Crop Name</label>
                                            <div class="form-control-wrap">
                                                <input type="text" class="form-control" id="cropName" name="name"
                                                    value="<%= record.name %>" required>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label class="form-label" for="category">Category</label>
                                            <div class="form-control-wrap">
                                                <input type="text" class="form-control" id="category" name="category"
                                                    value="<%= record.category %>" required>
                                            </div>
                                        </div>
                                        
                                        

                                        <div class="form-group">
                                            <label class="form-label" for="pay-amount">Crop
                                                thumbnail</label>
                                            <div class="form-control-wrap">
                                                <input type="file" multiple="" class="custom-file-input" id="customFile"
                                                    name="image">
                                                <label class="custom-file-label" for="customFile">Choose
                                                    file</label>
                                            </div>
                                        </div>
                                        
                                        <div class="form-group">
                                            <button type="button" class="btn btn-lg btn-primary btn-block submitBtn"
                                                onclick="updateItem('crop', '<%= record._id %>')">Update</button>

                                            <button class="btn btn-primary btn-lg btn-block spinload disp-0"
                                                type="button" disabled>
                                                <span class="spinner-grow spinner-grow-sm" role="status"
                                                    aria-hidden="true"></span>
                                                <span> Loading... </span>
                                            </button>
                                        </div>
                                    </form>
                                </div>
                                <div class="modal-footer bg-light">
                                    <span class="sub-text">Edit
                                        <span class="text-danger"><%= record.name %></span>
                                        </span>
                                </div>
                            </div>
                        </div>
                    </div>


                    <% }); %>

                    <% } else { %>

                    <div class="card card-bordered">
                        <img src="..." class="card-img-top" alt="">
                        <div class="card-inner">
                            <h5 class="card-title">No record here!</h5>
                            <p class="card-text">You have not created any knowledge base session.</p>
                            <a href="/dashboard/kbs/create" class="btn btn-primary">Get Started</a>
                        </div>
                    </div>

                    <% } %>
                </div>



            </div>
        </div>
    </div>
</div>
<!-- content @e -->
<%- include('../../includes/_footer.ejs') %>
<%- include('../../includes/_bottom.ejs') %>